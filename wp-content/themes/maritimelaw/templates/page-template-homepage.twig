            <div class="container">
                <div class="row">
                    <div class="col-xs-push-12">
                        <h2 style="text-align: center;"><strong>{{ post.get_field('homepage_contact_block_title')|default('Contact Us!') }}</strong></h2>
                        <hr >
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12 col-md-6 col-md-push-6">
                        <p>{{ post.get_field('homepage_contact_block_summary')|default('Use the form on the left to send us a note!') }}</p>
