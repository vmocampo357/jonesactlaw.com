{% extends "base.twig" %}

{% block content %}

    <div class="container-fluid">
        <!-- HOMEPAGE, BLOCK A !-->
        {% if is_mobile %}
        <div class="row homepage-first-block" style="background-color:gray;background-image:url('{{ post.get_field('homepage_head_block_background_image') }}');background-position:center;background-size:cover;">
            <div class="container">
                <div class="row">
                    <div id="homepage-attorneys-cont" style="position:relative;z-index:1;" class="col-md-6 col-sm-12">
                        <div id="homepage-attorneys">
                            {% if post.get_field('homepage_head_block_featured_image')|length > 0 %}
                            <img src="{{ post.get_field('homepage_head_block_featured_image') }}" style="position:absolute;bottom:0px;" />
                            {% endif %}
                        </div>
                    </div>
                    <div id="no-padding-smol" class="col-md-6 col-sm-12 col-md-push-1">
                        <div id="homepage-attorney-text">
                            {{ post.get_field('homepage_head_block_title') }}
                            <p style="color:white;padding-right:82px">{{ post.get_field('homepage_head_block_summary') }}</p>
                            {% if post.get_field('homepage_call_to_action_label')|length > 0 %}
                            <a href="{{ post.get_field('homepage_call_to_action_link')|default('#') }}" class="btn btn-danger">{{ post.get_field('homepage_call_to_action_label') }}</a>
                            {% endif %}
                            <p class="hidden-lg hidden-md visible-sm visible-xs">&nbsp;</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% else %}
            <div class="row homepage-first-block" style="background-color:gray;">
                <div class="container">
                    <div class="row">
                        <div id="homepage-attorneys-cont" style="height:200px !important; position:relative;z-index:1;" class="col-md-6 col-sm-12">
                            <div id="homepage-attorneys"></div>
                        </div>
                        <div id="no-padding-smol" class="col-md-6 col-sm-12 col-md-push-1">
                            <div id="homepage-attorney-text">
                                {{ post.get_field('homepage_head_block_title') }}
                                <p style="color:white;padding-right:82px">{{ post.get_field('homepage_head_block_summary') }}</p>
                                {% if post.get_field('homepage_call_to_action_label')|length > 0 %}
                                    <a href="{{ post.get_field('homepage_call_to_action_link')|default('#') }}" class="btn btn-danger">{{ post.get_field('homepage_call_to_action_label') }}</a>
                                {% endif %}
                                <p class="hidden-lg hidden-md visible-sm visible-xs">&nbsp;</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}
        <!-- /BLOCK !-->
        <!-- HOMEPAGE, BLOCK B !-->
        <div class="row homepage-block-row" style="background-color:white;padding:60px 0px;">
            <div class="container">
                <div class="row">
                    {% if post.get_field('homepage_second_block_title_a')|length > 0 %}
                    <div class="col-md-3 col-sm-6">
                        <div class="homepage-block-row-icons" style="text-align:center">
                            <a class="homepage-icon-link" href="#"><i class="fa {{ post.get_field('homepage_second_block_icon_class_a')|default('fa-home') }}"></i></a>
                            <h3><strong>{{ post.get_field('homepage_second_block_title_a') }}</strong></h3>
                            <div style="height:70px;">
                                {{ post.get_field('homepage_second_block_summary_a') }}
                            </div>
                            {{ post.get_field('homepage_second_block_link_a') }}
                        </div>
                    </div>
                    {% endif %}
                    {% if post.get_field('homepage_second_block_title_b')|length > 0 %}
                        <div class="col-md-3 col-sm-6">
                            <div class="homepage-block-row-icons" style="text-align:center">
                                <a class="homepage-icon-link" href="#"><i class="fa {{ post.get_field('homepage_second_block_icon_class_b')|default('fa-home') }}"></i></a>
                                <h3><strong>{{ post.get_field('homepage_second_block_title_b') }}</strong></h3>
                                <div style="height:70px;">
                                    {{ post.get_field('homepage_second_block_summary_b') }}
                                </div>
                                {{ post.get_field('homepage_second_block_link_b') }}
                            </div>
                        </div>
                    {% endif %}
                    {% if post.get_field('homepage_second_block_title_c')|length > 0 %}
                        <div class="col-md-3 col-sm-6">
                            <div class="homepage-block-row-icons" style="text-align:center">
                                <a class="homepage-icon-link" href="#"><i class="fa {{ post.get_field('homepage_second_block_icon_class_c')|default('fa-home') }}"></i></a>
                                <h3><strong>{{ post.get_field('homepage_second_block_title_c') }}</strong></h3>
                                <div style="height:70px;">
                                    {{ post.get_field('homepage_second_block_summary_c') }}
                                </div>
                                {{ post.get_field('homepage_second_block_link_c') }}
                            </div>
                        </div>
                    {% endif %}
                    {% if post.get_field('homepage_second_block_title_d')|length > 0 %}
                        <div class="col-md-3 col-sm-6">
                            <div class="homepage-block-row-icons" style="text-align:center">
                                <a class="homepage-icon-link" href="#"><i class="fa {{ post.get_field('homepage_second_block_icon_class_d')|default('fa-home') }}"></i></a>
                                <h3><strong>{{ post.get_field('homepage_second_block_title_d') }}</strong></h3>
                                <div style="height:70px;">
                                    {{ post.get_field('homepage_second_block_summary_d') }}
                                </div>
                                {{ post.get_field('homepage_second_block_link_d') }}
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
        <!-- /BLOCK !-->
        <!-- HOMEPAGE, BLOCK C !-->
        {% if testimonial_found %}
        <div class="row" style="background-color:#6b7b8b;padding:0px 0px 60px 0px;">
            <div class="container">
                {% if post.get_field("hp_testimonials_block_optional_title")|length > 0 %}
                    <div class="row">
                        <div class="col-md-12">
                            <h3 style="color:white;font-size:40px;text-align: center;font-weight:700;">{{ post.get_field("hp_testimonials_block_optional_title") }}</h3>
                        </div>
                    </div>
                {% endif %}
                <div class="row">
                    {% if is_mobile %}
                    <div class="col-md-7">
                        <div class="jal-responsive-video">
                            <iframe width="560" height="315" src="https://www.youtube.com/embed/{{ testimonial.get_field('tst_testimonial_video')|youtube_id }}?rel=0" allow="autoplay; encrypted-media" allowfullscreen></iframe>
                        </div>
                    </div>
                    {% else %}
                        <div class="col-md-7"></div>
                    {% endif %}
                    <div class="col-md-5">
                        <h2 id="homepage-testimonial-title" style="color:white;font-weight:700;">{{ testimonial.title }}</h2>
                        {#<p class="homepage-testimonial-preview" style="">{{ testimonial.get_preview(50,true,'Read Testimonial') }}</p>#}
                        <div class="homepage-testimonial-preview" style="color:white;">
                            {{ testimonial.get_field('page_summary')|default('Read about what our clients say about us!') }}
                            <a href="{{ testimonial.link }}" class="read-more">Read Testimonial</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% endif %}
        <!-- /BLOCK !-->
        <!-- HOMEPAGE, BLOCK D [WIDGET] !-->
        {% if is_mobile %}
        <div class="row" style="padding:60px 0px;background-image: url('{{ img_dir }}/maritime-injury-cases-blue-water-banner.jpg');background-size:cover;background-position: center center;">
            <div class="container">
                <div class="row">
                    <div class="col-xs-12">
                        <h3 style="color:white;font-size:40px;text-align: center;font-weight:700;">Maritime Injury Cases We Handle</h3>
                        <ul id="jal-homepage-cases">
                            {% for pa in practice_areas %}
                                <li><a href="{{ pa.link }}">{{ pa.title }}</a></li>
                            {% endfor %}
                        </ul>
                        <h3 style="text-align: center">
                            <a class="btn btn-primary btn-lg" href="{{ post.get_field("hp_practice_areas_link")|default("#") }}">See All Our Practice Areas</a>
                        </h3>
                    </div>
                </div>
            </div>
        </div>
        {% else %}
            <div class="row" style="padding:60px 0px;background-color:gray;">
                <div class="container">
                    <div class="row">
                        <div class="col-xs-12">
                            <h3 style="color:white;font-size:40px;text-align: center;font-weight:700;">Maritime Injury Cases We Handle</h3>
                            <ul id="jal-homepage-cases">
                                {% for pa in practice_areas %}
                                    <li><a href="{{ pa.link }}">{{ pa.title }}</a></li>
                                {% endfor %}
                            </ul>
                            <h3 style="text-align: center">
                                <a class="btn btn-primary btn-lg" href="{{ post.get_field("hp_practice_areas_link")|default("#") }}">See All Our Practice Areas</a>
                            </h3>
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}
